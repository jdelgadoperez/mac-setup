# Mac Setup Environment Variables
# Copy this file to .env and fill in your values
# Usage: cp .env.example .env

# ============================================================================
# Git Configuration (Required for: dorothy install git)
# ============================================================================

# Your full name for git commits
GIT_PERSONAL_NAME="Your Name"

# Your email for git commits
GIT_PERSONAL_EMAIL="your@email.com"

# ============================================================================
# Optional: Package Manager Tokens
# ============================================================================

# GitHub Personal Access Token for Homebrew (increases API rate limit)
# Generate at: https://github.com/settings/tokens
# Scopes needed: public_repo
HOMEBREW_TOKEN=""

# npm authentication token (if you publish packages)
# Get from: https://www.npmjs.com/settings/your-username/tokens
GIT_NPM_TOKEN=""

# ============================================================================
# Optional: Installation Preferences
# ============================================================================

# Set to 'true' to skip interactive prompts (useful for CI/CD)
# When enabled: XCode installation polling, Dracula Pro prompts are skipped
# Default: false (set by dorothy based on --interactive flag)
# NON_INTERACTIVE=false

# Set to 'true' to enable dry-run mode globally
# When enabled: All scripts preview actions without executing
# Default: false (set by dorothy based on --dry-run flag)
# DRY_RUN=false

# Set to 'false' to skip Homebrew package upgrades during installation
# Default: true
# BREW_UPGRADE=true

# Set to 'true' to skip Homebrew updates (speeds up repeated installations)
# Default: false
# BREW_SKIP_UPDATE=false
